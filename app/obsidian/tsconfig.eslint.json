{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "target": "esnext",
    "lib": ["dom", "ES2018"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "useUnknownInCatchVariables": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "incremental": true,
    "newLine": "lf",
    "paths": {
      "@log": ["./logger.ts"],
      "support-platform": ["./platform.json"],
      "@component/*": ["./component/*"],
      "@assets/*": ["../assets/*"],
      "@utils/*": ["./utils/*"],
      "@utils": ["./utils"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}

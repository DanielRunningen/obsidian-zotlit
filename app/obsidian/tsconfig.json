{
  "extends": "@aidenlx/eslint-config",
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "target": "ES2020",
    "lib": ["dom", "ES2018"],
    "moduleResolution": "Node",
    "module": "ESNext",
    "jsx": "react-jsx",
    "paths": {
      "@log": ["./logger.ts"],
      "support-platform": ["./platform.json"],
      "@component/*": ["./component/*"],
      "@assets/*": ["../assets/*"],
      "@utils/*": ["./utils/*"],
      "@utils": ["./utils"],
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}

{
  "extends": "@aidenlx/eslint-config",
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "target": "ES2020",
    "lib": ["dom", "ES2018"],
    "moduleResolution": "Node",
    "module": "ESNext",
    "jsx": "react",
    "paths": {
      "@log": ["./logger.ts"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}

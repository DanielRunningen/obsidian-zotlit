{
  "name": "obsidian-zotero-plugin",
  "version": "0.0.0",
  "description": "Obsidian.md plugin to integrate with Zotero, create literature notes and insert citations from a Zotero library.",
  "main": "main.js",
  "scripts": {
    "dev": "cross-env BUILD=dev node esbuild.config.mjs",
    "build": "cross-env BUILD=production node esbuild.config.mjs",
    "check": "tsc --noEmit",
    "prettier": "prettier --write 'src/**/*.+(ts|tsx|json|html|css)'",
    "eslint": "eslint . --ext .ts,.tsx --fix",
    "release": "release-it"
  },
  "keywords": [],
  "author": {
    "name": "AidenLx",
    "email": "aiden.lx@outlook.com",
    "url": "https://github.com/aidenlx"
  },
  "license": "MIT",
  "devDependencies": {
    "@aidenlx/eslint-config": "^0.1.0",
    "@aidenlx/prettier-config": "^0.1.0",
    "@aidenlx/ts-config": "^0.1.1",
    "@release-it/bumper": "^3.0.1",
    "@release-it/conventional-changelog": "^4.1.0",
    "@types/better-sqlite3": "7.4.2",
    "@types/dedent": "^0.7.0",
    "@types/json-schema": "^7.0.9",
    "@types/node": "^17.0.10",
    "@types/pretty-hrtime": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "assert-never": "^1.2.1",
    "better-sqlite3": "7.5.0",
    "builtin-modules": "^3.2.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dedent": "^0.7.0",
    "esbuild": "^0.14.21",
    "esbuild-plugin-less": "^1.1.6",
    "escape-string-regexp": "^5.0.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsdoc": "^37.6.3",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "fuse.js": "^6.5.3",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.7",
    "js-base64": "^3.7.2",
    "loglevel": "^1.8.0",
    "make-error": "^1.3.6",
    "obsidian": "obsidianmd/obsidian-api",
    "prettier": "^2.5.1",
    "pretty-hrtime": "^1.0.3",
    "release-it": "^14.12.3",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run prettier",
        "npm run eslint"
      ],
      "after:bump": [
        "npm run build"
      ],
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    },
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "${version}",
      "tagAnnotation": "Release v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true,
      "assets": [
        "build/main.js",
        "build/manifest.json",
        "build/styles.css"
      ],
      "proxy": "http://127.0.0.1:7890",
      "releaseName": "${version}"
    },
    "plugins": {
      "@release-it/bumper": {
        "out": "manifest.json"
      },
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      },
      "./scripts/version-bump.js": {
        "indent": 2
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}